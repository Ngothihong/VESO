@model QuanLyVeSo.Data.EntityFramework.PhieuPhatHanh

@{
    ViewBag.Title = "Thông tin chi tiết phiếu phát hành";
}
@section header{
<h1>Thông tin chi tiết phiếu phát hành</h1>
}

<div class="row">
    <!-- left column -->
    <div class="col-md-6 col-md-offset-2">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin bài viết</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <div class="box-body">

                <div class="form-group">
                    @Html.LabelFor(model => model.MaPhieuPhatHanh)
                    @Html.TextBoxFor(model => model.MaPhieuPhatHanh, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaDaiLy)
                    @Html.TextBoxFor(model => model.MaDaiLy, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NgayPhatHanh)
                    @Html.TextBoxFor(model => model.NgayPhatHanh, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TongSoLuongPhat)
                    @Html.TextBoxFor(model => model.TongSoLuongPhat, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>

            <!-- /.box-body -->
            <div class="box-footer">
                @Html.ActionLink("Về trang chủ", "Index", new object { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>