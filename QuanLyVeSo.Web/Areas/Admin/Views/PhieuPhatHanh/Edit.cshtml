@model QuanLyVeSo.Data.EntityFramework.PhieuPhatHanh

@{
    ViewBag.Title = "Cập nhật phiếu phát hành";
}
@section header{
<h1>Cập nhật phiếu phát hành</h1>

}

<div class="row">
    <!-- left column -->
    <div class="col-md-6 col-md-offset-2">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin phiếu phát hành</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Edit", "PhieuPhatHanh", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">

                    @Html.HiddenFor(model => model.MaPhieuPhatHanh)

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaPhieuPhatHanh)
                        @Html.TextBoxFor(model => model.MaPhieuPhatHanh, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaPhieuPhatHanh, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaDaiLy)
                        @Html.TextBoxFor(model => model.MaDaiLy, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaDaiLy, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NgayPhatHanh)
                        @Html.TextBoxFor(model => model.NgayPhatHanh, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NgayPhatHanh, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TongSoLuongPhat)
                        @Html.TextBoxFor(model => model.TongSoLuongPhat, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TongSoLuongPhat, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    @Html.ActionLink("Hủy", "Index", new object { }, new { @class = "btn btn-default col-md-offset-1" })
                </div>
            }
        </div>
    </div>
</div>